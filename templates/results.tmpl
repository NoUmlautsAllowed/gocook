<!DOCTYPE html>
<html lang="en">
<head>
    <title>GoCook | Search {{ .Query }}</title>
    {{ template "head.tmpl"}}
</head>
<body>
<section class="section p-0 hero is-chef">
    <div class="hero-head pb-3 pt-5">
        {{ template "header.tmpl" }}
    </div>
    <div class="hero-body pt-3">
        {{ template "search.tmpl" . }}
    </div>
</section>
<section class="section">
<div class="container is-max-widescreen">
    <div class="tile is-ancestor"></div>
    {{ range iterateRange .Results .ResultsPerRow }}
        <div class="tile is-parent p-3 m-3">
            {{ range . }}
                <div class="tile is-child p-3">
                    <a class="box" style="height: 100%" href="/recipes/{{ .Recipe.ID }}">
                        <figure class="image is-4by5">
                            <img src="{{ .Recipe.PreviewImageURLTemplate }}" alt="Preview">
                        </figure>
                        <div class="content">
                        <h3>
                            {{ .Recipe.Title }}
                        </h3>
                            <p>{{ .Recipe.Subtitle }}</p>
                            <br>
                            {{ template "recipeinfo.tmpl" .Recipe }}
                        </div>
                    </a>
                </div>
            {{ end }}
        </div>
    {{ end }}
</div>
<div class="container is-max-widescreen">
    <div class="p-3">
        {{ template "pagination.tmpl" . }}
    </div>
</div>
</section>
<section class="section hero is-chef">
    <div class="hero-foot">
        {{ template "footer.tmpl" }}
    </div>
</section>
</body>
</html>